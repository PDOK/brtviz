		{
			"id": "Gebouwpunt",
			"type": "symbol",
			"source": "brt_achtergrond_source",
			"source-layer" : "gebouwpunt",
			"maxzoom": 20,
			"minzoom": 14,
			"symbol-placement": "point",
			"symbol-spacing" : 250,
			"symbol-avoid-edges" : true,
			"text-field":"nederlandse_naam",
			"text-font": "Open Sans Regular",
			"text-size":12,
			"text-max-widht": 10,
			"text-line-height": 1.5,
			"paint": {
				"text-opacity": 1,
				"text-color": "rgb(0,0,0)",
				"text-halo-color": "rgb(0,0,0)",
				"text-halo-width": 2,
				"text-halo-blur":2
			}
		},
