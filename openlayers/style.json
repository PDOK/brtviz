{
	"version": 8,
	"name": "brt_a",
	"glyphs": "/font/{fontstack}/{range}.pbf",
	"sources": {
		"brt_achtergrond_source": {
			"type": "vector",
			"scheme": "tile",
			"tiles": [
				"http://localhost/brt_achtergrond/{z}/{x}/{y}.pbf"
			]
		}
	},	
	"layers":[
		// Background color
		{
			"id":  "background",
			"type": "background",
			"paint": {
				"background-color":"#333333"
			}
		},
		// 1. Layer Registratiefgebiedvlak POLYGON
		{
			"id": "Registratiefgebiedvlak",
			"type": "fill",
			"source": "brt_achtergrond_source",
			"source-layer" : "registratiefgebiedvlak",
			"maxzoom": 20,
			"minzoom": 0,
			"paint": {
				"fill-opacity": 1,
				"fill-color": "hsl(39, 41%, 86%)",
				"fill-outline-color": "rgb(0,0,0)"
			}
		},
		// 2. Layer Terreinvlak POLYGON
		{
			"id": "Terreinvlak",
			"type": "fill",
			"source": "brt_achtergrond_source",
			"source-layer" : "terreinvlak",
			"maxzoom": 20,
			"minzoom": 0,
			"paint": {
				"fill-opacity": 1,
				"fill-color": "hsl(39, 41%, 86%)",
				"fill-outline-color": "rgb(0,0,0)"
			}
		},
		// 3. Layer Waterdeelvlak POLYGON
		{
			"id": "Waterdeelvlak",
			"type": "fill",
			"source": "brt_achtergrond_source",
