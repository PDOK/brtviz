			"maxzoom": 20,
			"minzoom": 0,
			"paint": {
				"fill-opacity": 1,
				"fill-color": "hsl(39, 41%, 86%)",
				"fill-outline-color": "rgb(0,0,0)"
			}
		},
		// 4. Layer Waterdeellijn LINE
		{
			"id": "Waterdeellijn",
			"type": "line",
			"source": "brt_achtergrond_source",
			"source-layer" : "waterdeellijn",
			"maxzoom": 20,
			"minzoom": 6,
			"line-cap": "butt",//default
			"line-join": "miter",//default
			"line-miter-limit": 2, //default
			"paint": {
				"line-opacity": 1,
				"line-color": "hsl(39, 41%, 86%)",
				"line-width": 1
			}
		},
